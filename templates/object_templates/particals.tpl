<div class="particals">	
	<canvas id="js-particals" width="300" height="300"></canvas>
</div>

<div class="control">
	<div class="control-text">
		<label for="control-text__input">type some in text</label>
		<input id="control-text__input" type="text" name="" value="">
	</div>
	<div class="control-color">
		<label for="control-color__input">Schrift farbe</label>
		<input type="color" class="slider" id="control-color__input">
	</div>
	<div class="control-size">
		<label for="control-size__input">Schrift größe</label>
		<input type="range" min="1" max="100" value="50" class="slider" id="control-size__input">
	</div>
	<div class="control-axisX">
		<label for="control-axisX__input">Horizontal</label>
		<input type="range" min="-100" max="100" value="0" class="slider" id="control-axisX__input">
	</div>
	<div class="control-axisY">
		<label for="control-axisY__input">Vertical</label>
		<input type="range" min="-100" max="100" value="0" class="slider" id="control-axisY__input">
	</div>
	<div class="control-scale">
		<label for="control-scale__input">Scalierung</label>
		<input type="range" min="1" max="20" value="6" class="slider" id="control-scale__input">
	</div>
	<div class="control-density">
		<label for="control-density__input">Density</label>
		<input type="range" min="1" max="100" value="50" class="slider" id="control-density__input">
	</div>
	<div class="control-radius">
		<label for="control-radius__input">Radius</label>
		<input type="range" min="1" max="500" value="50" class="slider" id="control-radius__input">
	</div>
	<div class="control-dot">
		<label for="control-dot__input">Punkte</label>
		<input type="range" min="1" max="40" value="50" class="slider" id="control-dot__input">
	</div>
	<div class="control-lineMax">
		<label for="control-lineMax__input">Max Line distance</label>
		<input type="range" min="1" max="50" value="1" class="slider" id="control-lineMax__input">
	</div>
	<div class="control-lineMin">
		<label for="control-lineMin__input">Min Line distance</label>
		<input type="range" min="1" max="50" value="1" class="slider" id="control-lineMin__input">
	</div>
</div>
